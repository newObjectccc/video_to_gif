{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "ES2020"],
    "module": "ESNext",
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "useDefineForClassFields": true,
    "esModuleInterop": true,
    "paths": {
      "@src/*": ["./src/*"],
      "@/*": ["./@/*"]
    }
  },
  "include": ["src", "@"],
  "exclude": ["node_modules", "dist", "src/assets/**/*"]
}
